<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Image on the left -->
    <ImageView
        android:id="@+id/imageAdvertisement"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Advertisement Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"/>

    <!-- Title and add date on the right -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Advertisement Title"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageAdvertisement"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textAddDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Date"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toEndOf="@id/imageAdvertisement"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
